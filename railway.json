{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicy": {
      "type": "ON_FAILURE",
      "maxRetries": 3
    }
  },
  "services": [
    {
      "name": "backend",
      "source": "Backend",
      "startCommand": "uvicorn server:app --host 0.0.0.0 --port 8000",
      "healthcheckPath": "/api/health",
      "env": {
        "PORT": "8000",
        "DB_HOST": "{{.MySQL.HOST}}",
        "DB_USER": "{{.MySQL.USER}}",
        "DB_PASSWORD": "{{.MySQL.PASSWORD}}",
        "DB_NAME": "{{.MySQL.DATABASE}}"
      },
      "resources": {
        "memory": 512,
        "cpu": 0.5
      }
    },
    {
      "name": "frontend",
      "source": "Frontend",
      "startCommand": "streamlit run app.py --server.port $PORT",
      "healthcheckPath": "/",
      "env": {
        "PORT": "8501",
        "BACKEND_URL": "/api"
      }
    },
    {
      "name": "mysql",
      "type": "mysql",
      "plan": "small"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}