{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "services": [
    {
      "name": "backend",
      "source": "Backend",
      "startCommand": "uvicorn server:app --host 0.0.0.0 --port ${PORT:-8000}",
      "env": {
        "PORT": "8000"
      }
    },
    {
      "name": "frontend",
      "source": "Frontend",
      "startCommand": "streamlit run app.py --server.port ${PORT:-8501}",
      "env": {
        "PORT": "8501",
        "BACKEND_URL": "/api"
      }
    },
    {
      "type": "mysql",
      "name": "mysql",
      "plan": "small"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}