{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r Backend/requirements.txt && pip install -r Frontend/requirements.txt"
  },
  "deploy": {
    "startCommand": {
      "backend": "cd Backend && uvicorn server:app --host 0.0.0.0 --port ${PORT:-8000}",
      "frontend": "cd Frontend && streamlit run app.py --server.port ${PORT:-8501}"
    }
  },
  "services": [
    {
      "name": "backend",
      "source": "Backend",
      "env": {
        "PORT": "8000"
      }
    },
    {
      "name": "frontend",
      "source": "Frontend",
      "env": {
        "PORT": "8501",
        "BACKEND_URL": "/api"
      }
    },
    {
      "type": "mysql",
      "name": "mysql",
      "plan": "small"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}